<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title><%= project.name %></title>
    <link rel="stylesheet" href="assets/css/main.css" id="site_styles">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="shortcut icon" type="image/png" href="assets/favicon.png">
</head>
<body class="yui3-skin-sam">

<div id="doc">
    <div id="hd" class="yui3-g header">
        <div class="yui3-u-3-4">
            <% if (project.logo) { %>
                <h1><img src="<%= project.logo %>" title="<%= project.name %>"></h1>
            <% } else { %>
                <h1><img src="assets/css/logo.png" title="<%= project.name %>"></h1>
            <% } %>
        </div>
        <div class="yui3-u-1-4 version">
            <em>API Docs for: <%= project.version %></em>
        </div>
    </div>
    <div id="bd" class="yui3-g">

        <div class="yui3-u-1-4">
            <div id="docs-sidebar" class="sidebar apidocs">
                
            </div>
        </div>
        <div class="yui3-u-3-4">
            <div class="apidocs">
                <div id="docs-main">
                    <div class="content">
                        <table>
                            <tr>
                            <% 
                            var i = 1;
                            var rows = 2;
                            components.forEach(function(component) { %>
                                <% if (i > rows) {  %> </tr><tr> <% } %>
                                    <td><a href="<%=component.relativepath%>/index.html" class="btn btn-large btn-primary"><%=component.name%></a></td>
                                <% ++i; %>
                            <% }) %>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
